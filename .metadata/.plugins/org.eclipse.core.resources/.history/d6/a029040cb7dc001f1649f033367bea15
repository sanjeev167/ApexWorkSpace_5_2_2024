package com.nus.fileupload.ctrl;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.http.ResponseEntity;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.multipart.MultipartFile;

import com.nus.api.struct.ApiResponse;
import com.nus.exception.ResourceNotFoundException;
import com.nus.fileupload.entities.CustomerSatisfaction;
import com.nus.fileupload.model.FileUploadPayload;
import com.nus.fileupload.service.MonthlyCustomerSatisfactionService;
import com.nus.sec.ctrl.ApexBaseCtrl;
import com.nus.sec.service.ApexUserService;

/**
 * @Author:SanjeevKumar<br>
 * @Date:24-Jan-2025<br>
 * @Time:10:29:16 pm<br>
 * @Objective: <br>
 */
@RestController
@RequestMapping("/fileupload/v1")
public class MonthlyResourceAllocationController extends ApexBaseCtrl{
	private final Logger log = LoggerFactory.getLogger(MonthlyResourceAllocationController.class);
	@Autowired
	ApexUserService apexUserService;
	
	@Autowired
	MonthlyCustomerSatisfactionService monthlyCustomerSatisfactionService;	

	@RequestMapping("/resAllocation")
	@PostMapping(consumes = {MediaType.MULTIPART_FORM_DATA_VALUE}, produces = {MediaType.APPLICATION_JSON_VALUE})
    public ResponseEntity<ApiResponse> upload( @Validated @RequestParam("file") MultipartFile file, @RequestParam("month") Integer month,@RequestParam("year") Integer year) {
       
		FileUploadPayload fileUploadPayload = new FileUploadPayload(apexUserService.findByEmail(apiUser), month, year, file);
	    List<CustomerSatisfaction> customerSatisfactionRiskList = new ArrayList<CustomerSatisfaction>();		
			try {
				customerSatisfactionRiskList = monthlyCustomerSatisfactionService.readExcel(fileUploadPayload);
			} catch (IOException e) {				
				e.printStackTrace();
			}
			if(customerSatisfactionRiskList!=null) {
				apiReq=makeApiMetaData();
				apiReq.setPayLoad(fileUploadPayload);
				//Return response in a pre-defined format	       	
				apiResponse=makeSuccessResponse(customerSatisfactionRiskList,apiReq);		
				return ResponseEntity.ok().body(apiResponse);
			}else {
				throw new ResourceNotFoundException("No CustomerSatisfactionRisk is added.");
			}			
    }
	
}//End of MonthlyResourceAllocationController
