package com.nus.fileupload.repo;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.nus.fileupload.entities.ProjectMonthlyPlcc;

/**
 * @Author: SanjeevKumar<br>
 * @Date: 26-Jan-2025<br>
 * @Time: 2:10:29 am<br>
 * @Objective: <br>
 */
public interface ProjectMonthlyPlccRepo extends JpaRepository<ProjectMonthlyPlcc, Integer>{	
	
	@Query(value = "SELECT * FROM project_monthly_plcc WHERE plcc_month =?1 AND plcc_year =?2", nativeQuery = true)
	List<ProjectMonthlyPlcc> getAllByMonthAndYear(int month, int year);

	@Query(value = "DELETE FROM project_monthly_plcc WHERE plcc_month =?1 AND plcc_year =?2", nativeQuery = true)
	void deleteAllByMonthAndYear(int month, int year);
	
	
	@Query(value ="INSERT INTO hproject_monthly_plcc SELECT * FROM project_monthly_plcc WHERE plcc_month = ?1 and plcc_year = ?2")
    void moveRecordsFromMainTableToHistoryTable(int month, int year);
}
