package com.nus.fileupload.repo;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.nus.fileupload.entities.ProjectMonthlyPlcc;

/**
 * @Author: SanjeevKumar<br>
 * @Date: 26-Jan-2025<br>
 * @Time: 2:10:29 am<br>
 * @Objective: <br>
 */
public interface ProjectMonthlyPlccRepo extends JpaRepository<ProjectMonthlyPlcc, Integer>{	
	
	@Query(value = "SELECT * FROM project_monthly_plcc WHERE plcc_month =?1 AND plcc_year =?2", nativeQuery = true)
	List<ProjectMonthlyPlcc> getAllByMonthAndYear(int month, int year);
	
	@Query(value ="INSERT INTO hproject_monthly_plcc(total_revenue_amount,"
			                                        + "margin_amount,"
			                                        + "fte,"
			                                        + "project_code_id,"
			                                        + "plcc_month,"
			                                        + "plcc_year,"
			                                        + "created_by,"
			                                        + "created_on,"
			                                        + "modified_by,"
			                                        + "active_c,"
			                                        + "file_reference_id) "
											+ "select total_revenue_amount,"
											                 + "margin_amount,"
											                 + "fte,"
											                 + "project_code_id,"
											                 + "plcc_month,"
											                 + "plcc_year,"
											                 + "created_by,"
											                 + "created_on,"
											                 + "modified_by,"
											                 + "active_c,"
											                 + "file_reference_id "
											+ " FROM project_monthly_plcc WHERE plcc_month = ?1 and plcc_year = ?2", nativeQuery = true)
    int moveRecordsFromMainTableToHistoryTable(int month, int year);
	
	@Query(value = "DELETE FROM project_monthly_plcc WHERE plcc_month =?1 AND plcc_year =?2", nativeQuery = true)
	int deleteAllByMonthAndYear(int month, int year);
	
	
	@Query(value = "DELETE FROM project_monthly_plcc WHERE file_reference_id =?1", nativeQuery = true)
	void deleteByFileReferenceId(int referenceId);
	
}
