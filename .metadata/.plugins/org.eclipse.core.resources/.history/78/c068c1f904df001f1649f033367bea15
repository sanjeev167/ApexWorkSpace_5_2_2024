public interface ProjectMonthlyPlccRepo extends JpaRepository<ProjectMonthlyPlcc, Integer>{
	//@Query(value="DELETE FROM ProjectMonthlyPlcc WHERE plccMonth>=?1 and plccYear=?2", nativeQuery = true)
	//WITH deleted_rows AS (DELETE FROM project_monthly_plcc WHERE plcc_month = ? AND plcc_year =? RETURNING *) INSERT INTO hproject_monthly_plcc SELECT * FROM deleted_rows
		
	@Query("INSERT INTO hproject_monthly_plcc SELECT  * FROM    project_monthly_plcc WHERE plcc_month = ?1 AND plcc_year =?2 DELETE FROM project_monthly_plcc") 
	void moveAllRecordsFromMainToHistoryTable(int month, int year);

}
