package com.nus.pvt.master.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.nus.base.service.UserLoginBaseService;
import com.nus.pvt.master.model.UserGradeModel;
import com.nus.pvt.master.repo.UserTypeRepo;
import com.nus.sec.entities.UserGrade;

/**
 * @Author: SanjeevKumar<br>
 * @Date: 17-Jan-2025<br>
 * @Time: 4:29:17 pm<br>
 * @Objective: <br>
 */
@Service
public class UserGradeServiceImpl extends UserLoginBaseService implements UserGradeService {

	@Autowired
	UserTypeRepo userTypeRepo;	

	@Override
	public UserGrade addUserType(UserGradeModel userGradeModel) throws Exception{
		UserGrade savedUserTypeEntity = null;
		try {
			UserGrade userTypeEntity = new UserGrade();
			userTypeEntity.setGradeType(userGradeModel.getGradeType());
			userTypeEntity.setCreatedOn(currentDate);
			userTypeEntity.setCreatedBy(getCurrentLoginUserId());
			userTypeEntity.setActiveC(activeC);
			savedUserTypeEntity = userTypeRepo.save(userTypeEntity);
		} catch (Exception ex) {
			throw ex;
		}
		return savedUserTypeEntity;
	}

	@Override
	public UserGrade updateUserGrade(UserGradeModel userGradeModel) throws Exception{
		UserGrade userGradeEntityToBeUpdated = null;
		try {
			Optional<UserGrade> userGradeEntityWrapper = userTypeRepo.findById(userGradeModel.getId());
			if (userGradeEntityWrapper.isPresent()) {
				userGradeEntityToBeUpdated = userGradeEntityWrapper.get();
				userGradeEntityToBeUpdated.setUserGrade(userGradeModel.getUserGrade());								
				userGradeEntityToBeUpdated.setModifiedOn(currentDate);
				userGradeEntityToBeUpdated.setModifiedBy(getCurrentLoginUserId());				
				userTypeRepo.save(userGradeEntityToBeUpdated);
			}
		} catch (Exception ex) {
			throw ex;
		}
		return userGradeEntityToBeUpdated;
	}

	@Override
	public boolean deleteUserTypeByRecordId(Integer recordId)throws Exception {
		boolean isRecordDeleted = true;
		try {
			userTypeRepo.deleteById(recordId);
		} catch (Exception ex) {			
			isRecordDeleted = false;
			throw ex;
		}
		return isRecordDeleted;
	}

	@Override
	public UserGrade getUserTypeByRecordId(Integer recordId) throws Exception{
		UserGrade userGradeEntityFetched = null;
		try {
			Optional<UserGrade> userGradeEntityWrapper = userTypeRepo.findById(recordId);
			if (userGradeEntityWrapper.isPresent())
				userGradeEntityFetched = userGradeEntityWrapper.get();
		} catch (Exception ex) {
			throw ex;
		}
		return userGradeEntityFetched;
	}

	@Override
	public List<UserGrade> getAllUserTypes() throws Exception{
		List<UserGrade> userTypeList = null;
		try {
			userTypeList = userTypeRepo.findAllByActiveC("Y");
		} catch (Exception ex) {
			throw ex;
		}
		return userTypeList;
	}
	
	
}
