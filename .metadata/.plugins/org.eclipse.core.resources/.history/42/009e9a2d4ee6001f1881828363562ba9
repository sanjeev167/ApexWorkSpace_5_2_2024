 */
@RestController
@RequestMapping("/pvt/reports/v1")
public class PmProjectReportCtrl extends ApexBaseCtrl{
	
	@Autowired
	AssignProjectsForReportToPmService assignProjectsForReportToPmService;
	
	@RequestMapping("/pm")
	@GetMapping
    public ResponseEntity<ApiResponse> getPmReports(@Validated @RequestParam("fMonth") Integer fMonth,
    		@RequestParam("tMonth") Integer tMonth,
    		@RequestParam("year") Integer year ) throws ResourceNotFoundException {  
		
	    List<AssignProjectToPmModel> assignProjectToPmList;		
			try {
				assignProjectToPmList = assignProjectsForReportToPmService.getPmReports(month,year);
			if(assignProjectToPmList!=null) {				
				apiReq=makeApiMetaData();
				apiReq.setPayLoad("");
				//Return response in a pre-defined format	       	
				apiResponse=makeSuccessResponse(assignProjectToPmList,apiReq);		
				return ResponseEntity.ok().body(apiResponse);
			}else {
				throw new ResourceNotFoundException("No project is assigned to him.");
			}	
			} catch (Exception ex) {
				throw ex;
			}
    }

}
